<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.android.buggee.Settings.SettingsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/profile_image_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/avenir_regular"
        android:text="General Settings"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <LinearLayout
            android:id="@+id/linearLaout13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/getVerified"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:drawableStart="@drawable/ic_award_blue"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                android:drawablePadding="8dp"
                android:focusable="true"
                android:fontFamily="@font/avenir_regular"
                android:gravity="center_vertical"
                android:text="Get verified"
                android:textColor="#00B9FF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/createPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"

                android:clickable="true"
                android:drawableStart="@drawable/ic_flag_blue"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                android:drawablePadding="8dp"
                android:focusable="true"
                android:fontFamily="@font/avenir_regular"
                android:gravity="center_vertical"
                android:text="Create a page"
                android:textColor="#00B9FF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:drawableStart="@drawable/ic_language"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                android:drawablePadding="8dp"
                android:focusable="true"
                android:fontFamily="@font/avenir_regular"
                android:gravity="center_vertical"
                android:text="Language"
                android:textColor="#00B9FF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/myAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:drawableStart="@drawable/ic_my_account"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                android:drawablePadding="8dp"
                android:focusable="true"
                android:fontFamily="@font/avenir_regular"
                android:gravity="center_vertical"
                android:text="My account"
                android:textColor="#00B9FF"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_bell"
                    android:drawablePadding="8dp"
                    android:focusable="true"
                    android:fontFamily="@font/avenir_regular"
                    android:gravity="center_vertical"
                    android:text="Push notification"
                    android:textColor="#00B9FF"
                    android:textSize="18sp" />

                <Switch
                    android:id="@+id/pushNotification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/SwitchTheme" />
            </LinearLayout>

            <TextView
                android:id="@+id/privacySettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:drawableStart="@drawable/ic_privacy_setting"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                android:drawablePadding="8dp"
                android:focusable="true"
                android:fontFamily="@font/avenir_regular"
                android:gravity="center_vertical"
                android:text="Privacy settings"
                android:textColor="#00B9FF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/reportAProblem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:drawableStart="@drawable/ic_report_problem"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                android:drawablePadding="8dp"
                android:focusable="true"
                android:fontFamily="@font/avenir_regular"
                android:gravity="center_vertical"
                android:text="Report an issue"
                android:textColor="#00B9FF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/safetyCenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:drawableStart="@drawable/ic_safety_centre"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                android:drawablePadding="8dp"
                android:focusable="true"
                android:fontFamily="@font/avenir_regular"
                android:gravity="center_vertical"
                android:text="Safety center"
                android:textColor="#00B9FF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/helpCenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:drawableStart="@drawable/ic_help_center"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                android:drawablePadding="8dp"
                android:focusable="true"
                android:fontFamily="@font/avenir_regular"
                android:gravity="center_vertical"
                android:text="Help center"
                android:textColor="#00B9FF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/termsOfUse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:drawableStart="@drawable/ic_terms_of_use"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                android:drawablePadding="8dp"
                android:focusable="true"
                android:fontFamily="@font/avenir_regular"
                android:gravity="center_vertical"
                android:text="Terms of use"
                android:textColor="#00B9FF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/privacyPolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:drawableStart="@drawable/ic_privacy_policy"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                android:drawablePadding="8dp"
                android:focusable="true"
                android:fontFamily="@font/avenir_regular"
                android:gravity="center_vertical"
                android:text="Privacy policy"
                android:textColor="#00B9FF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableStart="@drawable/ic_logout"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                android:drawablePadding="8dp"
                android:focusable="true"
                android:fontFamily="@font/avenir_regular"
                android:gravity="center_vertical"
                android:text="Logout"
                android:textColor="#00B9FF"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@+id/textView24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/buggee_expand_logo" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/avenir_regular"
        android:gravity="center"
        android:lineSpacingExtra="4sp"
        android:text="Bugee.app\nV1.0"
        android:textColor="#00B9FF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
